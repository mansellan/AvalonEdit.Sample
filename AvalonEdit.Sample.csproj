    <TargetFramework>netcoreapp3.0</TargetFramework>
    <RootNamespace>AvalonEdit.Sample</RootNamespace>
    <UseWPF>true</UseWPF>
    <LangVersion>preview</LangVersion>
  </PropertyGroup>



  <ItemGroup>
    <PackageReference Include="AvalonEdit" Version="6.0.0-preview1" />
    <PackageReference Include="OmniSharp.Extensions.LanguageProtocol" Version="0.13.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\Copy.png" />
    <Resource Include="Images\Cut.png" />
    <Resource Include="Images\Delete.png" />
    <Resource Include="Images\Open.png" />
    <Resource Include="Images\Paste.png" />
    <Resource Include="Images\Redo.png" />
    <Resource Include="Images\Save.png" />
    <Resource Include="Images\Undo.png" />
    <Resource Include="Images\WordWrap.png" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="CustomHighlighting.xshd" />
  </ItemGroup>
</Project>